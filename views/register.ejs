<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Crie sua conta
            </h1>
            <% include ./partials/messages %>
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="name">Nome</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Seu nome" value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="digite seu Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password">Senha</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Crie uma senha" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirme a senha</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Repita a senha" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email2</label>
                        <input type="email" id="email2" name="email2" class="form-control" placeholder="digite seu Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
          Registrar
        </button>
                </form>
                <p class="lead mt-4">Have An Account? <a href="/users/login">Entrar</a></p>
        </div>
    </div>
</div>